doctype html
html
    head
        meta(charset="utf-8")
        title= "Список друзей"
        link(href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css", rel="stylesheet")
        script(src="https://code.jquery.com/jquery-3.6.0.js")
        script(src="https://code.jquery.com/ui/1.13.2/jquery-ui.js")
        link(href="/sass/list_friends.css" rel="stylesheet")
    body
        div
            h1 Список друзей

        div.friends
            table
                tr
                    th Фотография
                    th Имя пользователя
                if list_friends
                    for id_friend in list_friends
                        tr(id=id_friend)
                            th
                                img(src=users_data[id_friend].image)
                            th
                                a(href="/user/" + id_friend) #{users_data[id_friend].name}

            form(action="./")
                button Назад